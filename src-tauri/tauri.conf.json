{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Clock",
  "version": "0.1.0",
  "identifier": "com.timkay.clock",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8000",
    "beforeBuildCommand": "mkdir -p dist && cp index.html index.js style.css jquery.js icon.png manifest.json serviceworker.js dist/",
    "beforeDevCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Clock",
        "width": 250,
        "height": 250,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
